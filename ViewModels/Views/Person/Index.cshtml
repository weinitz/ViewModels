@model ViewModels.Models.PersonViewModel

@{
    ViewData["Title"] = "Person Page";
    Layout = "_Layout";
}

<div class="container">
    @using (var form = Html.BeginForm("Index", "Person", FormMethod.Post))
    {
        @Html.LabelFor(model => model.FilterString)
        {
            <div class="input-group">
                @Html.TextBoxFor(model => model.FilterString, new {@class = "form-control"})
                <div class="input-group-append">
                    <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        }
    }


    @using (var form = Html.BeginForm("Create", "Person", FormMethod.Post))
    {
        @Html.HiddenFor(model => model.FilterString)
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new {@class = "form-control"})
        @Html.LabelFor(model => model.City)
        @Html.TextBoxFor(model => model.City, new {@class = "form-control"})
        @Html.LabelFor(model => model.PhoneNumber)
        <div class="input-group">
            @Html.TextBoxFor(model => model.PhoneNumber, new {@class = "form-control"})
            <div class="input-group-append">
                <button type="submit" class="btn btn-success">add</button>
            </div>
        </div>
        @Html.ValidationSummary()
    }

    <div class="row">
        <div class="col-2">Id</div>
        <div class="col-2">Name</div>
        <div class="col-2">City</div>
        <div class="col-2">Phone number</div>
        <div class="col-4">Action</div>
    </div>
    @foreach (var person in Model.PeopleListView)
    {
        <partial name="_PersonViewPartial" model="person"/>
    }
</div>