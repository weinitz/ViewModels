@model ViewModels.ViewModels.CreateCityViewModel

<form asp-controller="City" asp-action="Create" method="post" class="form">
    <h4 class="form-text">Add City</h4>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
        <span class="alert-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="CountryId"></label>
        <select class="form-control" asp-for="CountryId">
            @{
                foreach (var country in ViewBag.Countries)
                {
                    <option value="@country.Id">@country.Name</option>
                }
            }
        </select>
        <span class="alert-danger" asp-validation-for="CountryId"></span>
    </div>
    <button class="form-control btn btn-primary" type="submit">Add</button>
</form>